rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /wods/{wodId} {
      // Allow anyone to read the list of wods or a single wod document.
      allow get, list: if true;
      
      // Allow only authenticated users with a 'coach' role to write.
      allow write: if request.auth != null && exists(/databases/$(database)/documents/roles_coach/$(request.auth.uid));
    }

    match /coaches/{coachId} {
        // Anyone can read coach profiles.
        allow read: if true;
        // A coach can only write to their own profile.
        allow write: if request.auth != null && request.auth.uid == coachId;
    }

    // Role documents are private and not client-manageable.
    match /roles_coach/{uid} {
        allow read, write: if false;
    }
  }
}
